<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseActivity">

    <ImageView
        android:id="@+id/chooseBackgroundImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gravpac" />

    <Button
        android:id="@+id/filmButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="200dp"
        android:background="#5226EA"
        android:fontFamily="@font/press_start_2p"
        android:text="Quizz Cinema"
        app:layout_constraintBottom_toTopOf="@+id/vgButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseBackgroundImageView" />

    <Button
        android:id="@+id/vgButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="180dp"
        android:background="#5226EA"
        android:fontFamily="@font/press_start_2p"
        android:text="Quizz Jeux Video"
        app:layout_constraintBottom_toTopOf="@+id/chooseBackgroundImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filmButton" />

</androidx.constraintlayout.widget.ConstraintLayout>